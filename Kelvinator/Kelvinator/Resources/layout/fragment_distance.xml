<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/layV_distances_from"
            android:background="@drawable/unit_list_border">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg_distances_from">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Meter"
                    android:id="@+id/rb_from_meter" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilometer"
                    android:id="@+id/rb_from_km" />
                <RadioButton
                    android:text="Centimeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_cm" />
                <RadioButton
                    android:text="Millimeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_mm" />
                <RadioButton
                    android:text="Nanometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_nm" />
                <RadioButton
                    android:text="Mile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_mile" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yard"
                    android:id="@+id/rb_from_yard" />
                <RadioButton
                    android:text="Foot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_foot" />
                <RadioButton
                    android:text="Inch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_inch" />
                <RadioButton
                    android:text="Astronomical Unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_from_au" />
            </RadioGroup>
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_from" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/layV_distances_to"
            android:background="@drawable/unit_list_border">
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg_distances_to">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Meter"
                    android:id="@+id/rb_to_meter" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilometer"
                    android:id="@+id/rb_to_km" />
                <RadioButton
                    android:text="Centimeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_cm" />
                <RadioButton
                    android:text="Millimeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_mm" />
                <RadioButton
                    android:text="Nanometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_nm" />
                <RadioButton
                    android:text="Mile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_mile" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yard"
                    android:id="@+id/rb_to_yard" />
                <RadioButton
                    android:text="Foot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_foot" />
                <RadioButton
                    android:text="Inch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_inch" />
                <RadioButton
                    android:text="Astronomical Unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_to_au" />

            </RadioGroup>
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_to" />
        </LinearLayout>

    </LinearLayout>
        <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/control_convert_button" />

    </LinearLayout>
</ScrollView>
         
