<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layV_time_from"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/unit_list_border">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_time_from">
            <RadioButton
                android:id="@+id/rb_from_second"
                android:text="Second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_from_millisecond"
                android:text="Millisecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_microsecond"
                android:text="Microsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_nanosecond"
                android:text="Nanosecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_picosecond"
                android:text="Picosecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_minute"
                android:text="Minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_hour"
                android:text="Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_day"
                android:text="Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_week"
                android:text="Week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_month"
                android:text="Month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_year"
                android:text="Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_from" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layV_time_to"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/unit_list_border">
        <RadioGroup
            android:id="@+id/rg_time_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_to_second"
                android:text="Second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_to_millisecond"
                android:text="Millisecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_microsecond"
                android:text="Microsecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_nanosecond"
                android:text="Nanosecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_picosecond"
                android:text="Picosecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_minute"
                android:text="Minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_hour"
                android:text="Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_day"
                android:text="Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_week"
                android:text="Week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_month"
                android:text="Month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_year"
                android:text="Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_to" />
        </LinearLayout>
    </LinearLayout>

