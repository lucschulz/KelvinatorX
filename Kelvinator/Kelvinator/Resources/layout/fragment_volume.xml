<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/layV_volume_from"
        android:background="@drawable/unit_list_border">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_volume_from">
            <RadioButton
                android:id="@+id/rb_from_cubic_meter"
                android:text="Cubic Meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_from_cubic_kilometer"
                android:text="Cubic Kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_cubic_centimeter"
                android:text="Cubic Centimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_kelvin"
                android:text="Cubic Millimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_liter"
                android:text="Liter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_milliliter"
                android:text="Milliliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_us_gallon"
                android:text="US Gallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_imperial_gallon"
                android:text="Imperial Gallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_fluid_quart"
                android:text="Imperial Fluid Quart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_fluid_pint"
                android:text="Imperial Fluid Pint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_from_fluid_ounce"
                android:text="Imperial Fluid Ounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_from" />
    </LinearLayout>
        <LinearLayout
        android:id="@+id/layV_volume_to"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/unit_list_border">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_volume_to">
            <RadioButton
                android:id="@+id/rb_to_cubic_meter"
                android:text="Cubic Meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_to_cubic_kilometer"
                android:text="Cubic Kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_cubic_centimeter"
                android:text="Cubic Centimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_kelvin"
                android:text="Cubic Millimeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_liter"
                android:text="Liter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_milliliter"
                android:text="Milliliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_us_gallon"
                android:text="US Gallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_imperial_gallon"
                android:text="Imperial Gallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_fluid_quart"
                android:text="Imperial Fluid Quart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_fluid_pint"
                android:text="Imperial Fluid Pint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_to_fluid_ounce"
                android:text="Imperial Fluid Ounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/prompt_to" />
    </LinearLayout>
            </LinearLayout>

        <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/control_convert_button" />

    </LinearLayout>

</ScrollView>
